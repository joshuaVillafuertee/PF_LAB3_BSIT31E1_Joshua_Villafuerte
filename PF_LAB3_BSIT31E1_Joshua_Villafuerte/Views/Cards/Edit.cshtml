@model PF_LAB3_BSIT31E1_Joshua_Villafuerte.Models.Card

@{
    ViewData["Title"] = "Edit Card";
}

<div class="form-container text-light">
    <h1 class="mb-4 text-warning fw-bold">Edit Card</h1>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label text-warning"></label>
            <input asp-for="Name" class="form-control bg-dark text-light border-warning" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rarity" class="form-label text-warning"></label>
            <input asp-for="Rarity" class="form-control bg-dark text-light border-warning" />
            <span asp-validation-for="Rarity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label text-warning"></label>
            <textarea asp-for="Description" class="form-control bg-dark text-light border-warning"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label text-warning">Replace Image</label>
            <input type="file" name="imageFile" class="form-control bg-dark text-light border-warning" />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mt-2">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail glowing-img" style="max-height:150px;" />
                </div>
            }
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-warning glow-btn"> Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary glow-btn">Back</a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .form-container {
            padding: 20px;
            background: linear-gradient(180deg, #000, #111, #0a0f0a);
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(255, 255, 0, 0.4);
            max-width: 600px;
            margin: auto;
        }

        .glowing-img {
            border: 2px solid #ffc107;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
        }

        .glow-btn {
            box-shadow: 0 0 8px rgba(255, 193, 7, 0.6);
            transition: all 0.3s ease-in-out;
        }

            .glow-btn:hover {
                box-shadow: 0 0 15px rgba(255, 193, 7, 1);
                transform: scale(1.05);
            }
    </style>
}
