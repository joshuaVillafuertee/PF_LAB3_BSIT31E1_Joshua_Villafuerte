@model PF_LAB3_BSIT31E1_Joshua_Villafuerte.Models.Card

@{
    ViewData["Title"] = "Delete Card";
}

<div class="delete-container text-center">
    <h1 class="text-danger fw-bold mb-4">Delete Confirmation</h1>

    <div class="card greed-card mx-auto" style="max-width: 500px;">
        <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/Image/placeholder.png")"
             class="card-img-top img-fluid glowing-img"
             alt="@Model.Name" />

        <div class="card-body text-light">
            <h3 class="card-title">@Model.Name</h3>
            <p><span class="badge bg-info">@Model.Rarity</span></p>
            <p class="text-warning">Are you sure you want to delete this card?</p>

            <form asp-action="DeleteConfirmed" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-danger glow-btn">🗑 Delete</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning glow-btn">↩ Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Styles {
    <style>
        .delete-container {
            padding: 20px;
            background: linear-gradient(180deg, #000000, #111111, #0a0f0a);
            border-radius: 10px;
            box-shadow: inset 0 0 15px rgba(255, 0, 0, 0.3);
        }

        .greed-card {
            background-color: #1a1a1a;
            border: 1px solid #ff0000;
            border-radius: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .greed-card:hover {
                transform: scale(1.02);
                box-shadow: 0 0 25px rgba(255, 0, 0, 0.7);
            }

        .glow-btn {
            box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);
            transition: all 0.3s ease-in-out;
        }

            .glow-btn:hover {
                box-shadow: 0 0 20px rgba(255, 0, 0, 0.9);
                transform: scale(1.05);
            }
    </style>
}
