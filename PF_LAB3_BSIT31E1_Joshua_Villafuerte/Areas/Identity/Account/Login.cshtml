@model PF_LAB3_BSIT31E1_Joshua_Villafuerte.Models.Card

@{
    ViewData["Title"] = "Create Card";
}

<div class="form-container text-light">
    <h1 class="mb-4 text-success fw-bold">Create New Card</h1>

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="greed-form">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control dark-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rarity" class="form-label"></label>
            <input asp-for="Rarity" class="form-control dark-input" />
            <span asp-validation-for="Rarity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control dark-input"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="imageFile" class="form-label">Upload Image</label>
            <input type="file" name="imageFile" class="form-control dark-input" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success glow-btn">Create</button>
            <a asp-action="Index" class="btn btn-secondary glow-btn">Cancel</a>
        </div>
    </form>
</div>
